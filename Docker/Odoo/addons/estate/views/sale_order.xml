<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record id="sale_order_view_trainingdate" model="ir.ui.view">
      <field name="name">sale.order.view.trainingdate</field>
      <field name="model">sale.order</field>
      <field name="inherit_id" ref="sale.view_order_form"/>
      <field name="arch" type="xml">
            <xpath expr="/form/sheet/notebook/page/field[@name='order_line']/tree/field[@name='tax_id']" position="after">
                <field name="training_date"/>
                <field name="employee"/>
                <button name="button_request_approval" type="object" string="Request Approval" attrs="{'invisible': ['|', ('state', 'not in', ['draft', 'sent','sale']), ('id', '=', False)]}" data-hotkey="z"/>
            </xpath>
      </field>
    </record>
  </data>
</odoo>